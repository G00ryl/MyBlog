
@using Microsoft.AspNetCore.Http

<!DOCTYPE html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="~/css/_layout.css" />
    <link href="~/Pictures/Vegetables.jpg" />
    <link href="~/Pictures/home3.png" />
    <link href="~/Pictures/logo.png" />
    <link href="~/Pictures/avatar.png" />
    <link href="~/img/food.png" />
    <link href="~/img/food2.png" />
    <link href="~/img/ground.png" />
    <link href="~/audio/dead.mp3" />
    <link href="~/audio/down.mp3" />
    <link href="~/audio/eat.mp3" />
    <link href="~/audio/left.mp3" />
    <link href="~/audio/right.mp3" />
    <link href="~/audio/up.mp3" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
   
</head>


<div>
	<header>
		<h5 id="logo">
			<img src="~/Pictures/logo.png">
		</h5>
		@if (Context.Session.GetString("Login") == null)
		{
			<div class="container">
				<img src="~/Pictures/avatar.png" alt="Avatar" class="image" style="width:100%">
				<div class="middle">
					<a class="button" href="@Url.Action("Login", "Home")" style="color:black"> Sign In </a>
				</div>
			</div>
		}
		else if(Context.Session.GetString("Login") != null)
		{
			<div class="container">
				<img src="~/Pictures/avatar.png" alt="Avatar" class="image" style="width:100%">
				<div class="middle">
					<a class="button" href="@Url.Action("AdminPanel", "Home")" style="color:black"> Admin Panel </a>
				</div>
			</div>
		}
    <ul>
        <li><a class="active" href="@Url.Action("index", "Home")"><img src="~/Pictures/home3.png" class="home"></a></li>
        <li><a href="@Url.Action("contact", "Home")" style="color:black">Contact</a></li>
        <li><a href="@Url.Action("Game", "Home")" style="color:black">Game</a></li>
    </ul>
	</header>
	</div>
	@RenderBody()

	<div>
		<footer>
			@RenderSection("footer", required: false)
		</footer>
	</div>
