@model Post
@{ 
	ViewBag.Title = Model.TitleOfPost;
}
<head>
	<meta name="viewport" content="width=device-width" />
	<title>@ViewBag.Title</title>
	<meta charset="utf-8" />
	<link rel="stylesheet" href="~/css/details.css" />
	<div class="create">
		<h1>Create Post:</h1>
	</div>
</head>
<div class="card">
	<h1>Id: @Model.Id</h1>
	<h2>Title: @Model.TitleOfPost</h2>
	<p> Description: @Model.DescriptionOfPost</p>
	<div class="seePost">
		<a asp-action="Index" asp-controller="Home">Home</a>
	</div>
</div>