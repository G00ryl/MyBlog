@{
	ViewBag.Title = "Login";
}
<head>
	<meta name="viewport" content="width=device-width" />
	<title>@ViewBag.Title</title>
	<meta charset="utf-8" />
	<link rel="stylesheet" href="~/css/login.css" />
</head>
<div class="logIn">
	<h1>!INFO!</h1>
	<p>If u are an admin Log In to add the post, if u are a user, please write a contact form to be a admin!</p>
</div>
<div style="height:auto; margin:0 auto;">
	<form method="post">
		<h1>Log In</h1>
		<hr />
		<h2>
			Nickname:
		</h2>
		<input type="text" class="inputtext" name="nick" placeholder="admin1234" autofocus required>
		<h2>Password</h2>
		<input type="password" class="inputtext" name="nick" placeholder="Hashed password" required>

		<input type="submit" id="submit" name="submit" value="Log In">
	</form>
</div>
@section footer{
	<div class="footer">
