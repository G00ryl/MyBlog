@model Administrator
@{
	ViewBag.Title = "New Admin";
}
<head>
	<meta name="viewport" content="width=device-width" />
	<title>@ViewBag.Title</title>
	<meta charset="utf-8" />
	<link rel="stylesheet" href="~/css/newAdmin.css" />

</head>
<form method="post">
	<div class="card">
		<p>Login for new admin: </p>
		<input asp-for="Login" placeholder="Login"><br />
		<span asp-validation-for="Login"></span>
		<p>Password for new admin: </p>
		<input asp-for="Password" placeholder="Password" /><br />
	<span asp-validation-for="Password"></span>	
		<div class="button">
			<input type="submit" id="submit" name="save" value="Save" />
		</div>
	</div>
</form>