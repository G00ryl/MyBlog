@model MyBlog.ViewModels.ContactMessageViewModel
@{
	ViewBag.Title = "Contact";
}
<head>
	<meta name="viewport" content="width=device-width" />
	<title>@ViewBag.Title</title>
	<meta charset="utf-8" />
	<link rel="stylesheet" href="~/css/contact.css" />

</head>
<div class="logIn">
	<h1>
		If u have any question pls feel free to ask it here. Check your email for our response! :)
	</h1>
</div>
<div class="alert" style="color:red">
	<p>
		<strong>!! Info !!</strong><br />After completing the form, you will be redirected to the homepage
	</p>
</div>
<div class="myForm">
	<form method="post">
		<h1>
			Nickname:
		</h1>
		<div class="inputtext">
			@Html.TextBoxFor(model => model.Nickname, new
		   {
			   @Name = "Nickname",
			   @Placeholder = "Nickname",
			   @Required = "true"
		   })
		</div>

		<h1>Email:</h1>
		<div class="inputtext">
			@Html.TextBoxFor(model => model.Email, new
		   {
			   @Name = "Nickname",
			   @Placeholder = "address@email.com",
			   @Required = "true"
		   })

		</div>
			<h1>Description of question:</h1>
			@Html.TextAreaFor(model => model.Description, new
		   {
			   @Name = "description",
			   @Rows = "6",
			   @Cols = "40",
			   @Placeholder = "I have a question",
			   @Required = "true"
		   })
			<input type="submit" id="submit" name="submit" value="Send">
			<input type="reset" id="reset" value="Clear">
</form>
</div>
@section footer{
	<div class="footer">
		<h3>&copy; Website made by Dawid Gorla 2018.</h3>
	</div>

}

