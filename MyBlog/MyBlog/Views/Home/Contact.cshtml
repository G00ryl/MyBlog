
@{
	ViewBag.Title = "Contact";
}
<head>
	<meta name="viewport" content="width=device-width" />
	<title>@ViewBag.Title</title>
	<meta charset="utf-8" />
	<link rel="stylesheet" href="~/css/contact.css" />

</head>
<div class="info">
	<p>
		If u have any question pls feel free to ask it here. Check your email for our response! :)
	</p>
</div>
<div class="alert" style="color:red">
	<p>
		<strong>!! Info !!</strong><br />After completing the form, you will be redirected to the homepage
	</p>
</div>
<div style="height:auto; margin:0 auto;">
	<form method="post">
		<h1>
			Nickname:
		</h1>
		<input type="text" class="inputtext" name="nick" placeholder="Example" autofocus required>
		<h1>Email:</h1>
		<input type="email" class="inputtext" name="nick" placeholder="address@email.com" required>
		<h1>Description of question:</h1>
		<textarea name="kom" rows="6" cols="40" placeholder= "I have a question.." required></textarea>

		<input type="submit" id="submit" name="submit" value="Send">
		<input type="reset" id="reset" value="Clear">
	</form>
</div>
@section footer{
	<div class="footer">
		<h3>&copy; Website made by Dawid Gorla 2018.</h3>
	</div>

}
	
